{
  "name": "billsplitter",
  "version": "1.0.0",
  "description": "Help split the bill with your friends",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon server\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "npm install && cd client && npm install && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albarrank/BillSplitter.git"
  },
  "author": "Kevin Albarran",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albarrank/BillSplitter/issues"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "if-env": "^1.0.4",
    "nodemon": "^2.0.1"
  }
}
